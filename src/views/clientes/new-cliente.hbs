
<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>
            Nuevo Cliente
        </h3>
    </div>
    <div class="card-body">
        <form action="/clientes/new-cliente" method="POST">
                    <div class="form-group">
                        <input type="text" name="nombre" class="form-control" placeholder="Nombre" value="{{cliente.nombre}}" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="apellido" class="form-control" placeholder="Apellido" value="{{cliente.apellido}}">
                    </div>
                     <div class="form-group">
                        <input type="number" name="edad" class="form-control" placeholder="Edad" value="{{cliente.edad}}">
                    </div>
                     <div class="form-group">
                        <input type="date"  id="datepicker" name="fechnac" class="form-control" placeholder="Fecha de nacimiento" value="{{cliente.fechanac}}">
                    </div>
                                       
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit"> Grabar</button>
        </div>
        </form>
    </div>
</div>
</div>




