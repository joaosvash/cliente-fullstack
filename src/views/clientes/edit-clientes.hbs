<div class="cold-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>
                Editar Cliente
            </h3>
            <div class="card-body">
                <form action="/clientes/edit-clientes/{{cliente._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <input type="text" name="nombre" class="form-control" placeholder="Nombre" value="{{cliente.nombre}}">
                    </div>
                     <div class="form-group">
                        <input type="text" name="apellido" class="form-control" placeholder="Apellido" value="{{cliente.apellido}}">
                    </div>
                     <div class="form-group">
                        <input type="number" name="edad" class="form-control" placeholder="Edad" value="{{cliente.edad}}">
                    </div>
                     <div class="form-group">
                        <input type="date" name="fechnac" class="form-control" placeholder="Fecha de nacimiento" value="{{cliente.fechnac}}">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit"> Guardar </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>